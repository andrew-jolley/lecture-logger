{
  "name": "lecture-logger",
  "version": "2.8.0",
  "buildNumber": "20250929.003",
  "uiVersion": "2.0.1",
  "description": "An app to log lectures into an Excel spreadsheet",
  "author": "Andrew Jolley <andrew@jolley.dev> (UI/Frontend), Liam Shadwell (Python Backend)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "node -e \"const fs = require('fs'); if (fs.existsSync('dist')) fs.rmSync('dist', {recursive: true, force: true})\"",
    "setup-python": "node scripts/setup-multiplatform-python.js",
    "predist": "npm run setup-python",
    "dist": "node scripts/build-helper.js all",
    "dist:mac": "node scripts/build-helper.js mac",
    "dist:win": "node scripts/build-helper.js win",
    "dist:linux": "node scripts/build-helper.js linux",
    "build": "npm run dist",
    "build:win": "npm run dist:win",
    "build:mac": "npm run dist:mac",
    "build:linux": "npm run dist:linux",
    "list-builds": "node scripts/list-builds.js"
  },
  "dependencies": {
    "electron-version": "^2.0.1",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "dmg-license": "^1.0.11",
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.andrewjolley.lecturelogger",
    "productName": "Lecture Logger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "renderer.js",
      "package.json",
      "python/**/*",
      "!python/electron_settings.json",
      "!python-runtime/**/*"
    ],
    "extraFiles": [
      {
        "from": "python-runtime",
        "to": "python-runtime",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asarUnpack": [
      "python-runtime/**/*"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": false,
      "menuCategory": false,
      "artifactName": "${productName}-${version}-x64.exe",
      "uninstallDisplayName": "${productName}",
      "include": "installer-script.nsh",
      "installerHeaderIcon": null,
      "uninstallerIcon": null,
      "warningsAsErrors": false,
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "packElevateHelper": true,
      "guid": "a8b7bd78-cfea-5f1f-95a5-6a1b0730475d",
      "removeDefaultUninstallWelcomePage": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "pkg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "compression": "maximum"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "maximum",
      "sign": null,
      "forceCodeSigning": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "maximum"
    }
  }
}
